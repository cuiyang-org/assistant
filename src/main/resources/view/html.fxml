<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox HBox.hgrow="ALWAYS" visible="false" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.cuiyang.assistant.controller.HtmlController">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="1">
        <padding>
            <Insets bottom="5" right="5"/>
        </padding>
        <Button onMouseClicked="#htmlFormat" text="格式化"/>
    </HBox>
    <TextArea fx:id="htmlTextArea" VBox.vgrow="ALWAYS"/>
</VBox>

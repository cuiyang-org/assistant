<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="5" visible="false" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.cuiyang.assistant.controller.EncryptionController">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>
    <TextArea fx:id="encryptionInput" wrapText="true" VBox.vgrow="ALWAYS" promptText="请输入要加密/解码的内容"/>
    <HBox alignment="CENTER_LEFT" spacing="1">
        <Button onMouseClicked="#encryptionExchange" text="互换"/>
        <Button onMouseClicked="#digest" text="MD2"/>
        <Button onMouseClicked="#digest" text="MD5"/>
        <Button onMouseClicked="#digest" text="SHA-1"/>
        <Button onMouseClicked="#digest" text="SHA-256"/>
        <Button onMouseClicked="#digest" text="SHA-384"/>
        <Button onMouseClicked="#digest" text="SHA-512"/>
    </HBox>
    <TextArea fx:id="encryptionOutput" wrapText="true" VBox.vgrow="ALWAYS" promptText="加密/解码结果"/>
</VBox>

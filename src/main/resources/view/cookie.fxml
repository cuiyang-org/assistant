<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.cuiyang.assistant.control.searchcodeeditor.SearchCodeEditor?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cuiyang.assistant.controller.CookieController">
    <SplitPane dividerPositions="0.6" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <VBox>
            <padding>
                <Insets right="5"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="2" styleClass="menu">
                <padding>
                    <Insets top="2" bottom="5" right="5"/>
                </padding>
                <Label styleClass="menu-item" onMouseClicked="#cookieFormat" text="格式化"/>
                <Label styleClass="menu-item" onMouseClicked="#cookieSimple" text="去格式化"/>
            </HBox>
            <SearchCodeEditor fx:id="cookieTextArea" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox>
            <padding>
                <Insets left="5"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="2" styleClass="menu">
                <padding>
                    <Insets top="2" bottom="5" right="5"/>
                </padding>
                <Label styleClass="menu-item" onMouseClicked="#cookieFold" text="折叠"/>
                <Label styleClass="menu-item" onMouseClicked="#cookieExpanded" text="展开"/>
            </HBox>
            <TreeView fx:id="cookieTreeView" VBox.vgrow="ALWAYS">
                <contextMenu>
                    <ContextMenu>
                        <items><MenuItem text="复制" onAction="#copyCookie"/></items>
                        <items><MenuItem text="复制值" onAction="#copyCookieValue"/></items>
                        <items><MenuItem text="复制名字" onAction="#copyCookieName"/></items>
                    </ContextMenu>
                </contextMenu>
            </TreeView>
        </VBox>
    </SplitPane>
</AnchorPane>
